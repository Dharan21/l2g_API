@model l2g.Entities.BusinessEntities.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.css" rel="stylesheet" />
    <link href="~/Content/Custom CSS/login.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="container-fluid animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-lg-8 leftside">
                <video autoplay loop muted preload="metadata" onplay="videoPlayer()" style="height: 100vh;">
                    <source src="~/Content/Videos/Video2.webm" type="video/webm" />
                </video>
            </div>
            <div class="col-12 col-md-6 col-lg-4 d-flex flex-column justify-content-center rightside" id="rightside">
                <nav class="navbar navbar-expand justify-content-end fixed-top">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link register" href="/Auth/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home">
                                <i class="fa fa-times"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="row mx-2">
                    <div class="col-12">
                        <h2><strong>Login</strong></h2>
                        <p>or&nbsp;<a href="/Auth/Register">create an account</a></p>
                    </div>
                    <div class="col-12">
                        <form method="post">
                            <div class="form-group position-relative">
                                @Html.TextBoxFor(model => model.Username, null, new { @class = "form-control", @placeholder = "Username", autocomplete = "current-username" })
                            </div>
                            <div class="form-group position-relative">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control position-relative", @placeholder = "Password", @autocomplete = "current-password" })
                            </div>
                            <div class="form-group">
                                <p class="text-danger m-0" style="font-size: 12px">
                                    @Html.ValidationMessageFor(model=>model.Username)
                                    </p>
                                <p class="text-danger m-0" style="font-size: 12px">
                                    @Html.ValidationMessageFor(model => model.Password)
                                </p>
                            </div>
                            <div class="form-group">
                                <small class="text-danger">
                                    @if (ViewBag.Error != null)
                                    {
                                        <span>@ViewBag.Error</span>
                                    }
                                </small>
                            </div>
                            <div class="from-group">
                                <input type="submit" value="Login" id="btn" class="btn btn-block text-white">
                            </div>
                            <div class="form-group mt-1">
                                <a href="/Auth/Forgot-password">Forgot your password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function videoPlayer()
        {
            this.playVideo = document.querySelector('video');
            if (this.playVideo.pause) {
                this.playVideo.muted = true; // important
                this.playVideo.play();
            }
        }
    </script>
</body>
</html>
