@model l2g.Entities.BusinessEntities.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Custom CSS/login.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    <div class="container-fluid animated fadeIn">
        <div class="row">
            <div class="col-md-6 col-lg-8 leftside">
                <video loop muted preload="metadata" (canplay)="videoPlayer()" style="height: 100vh;">
                    <source src="~/Content/Videos/Video2.webm" type="video/webm" />
                </video>
            </div>
            <div class="col-12 col-md-6 col-lg-4 d-flex flex-column justify-content-center rightside" id="rightside">
                <nav class="navbar navbar-expand justify-content-end fixed-top">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link register" href="/Auth/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home">
                                <i class="fa fa-times"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="row mx-2">
                    <div class="col-12">
                        <h2><strong>Login</strong></h2>
                        <p>or&nbsp;<a>create an account</a></p>
                    </div>
                    <div class="col-12">
                        <form method="post">
                            <div class="form-group position-relative">
                                @Html.TextBoxFor(model => model.Username, null, new { @class = "form-control", @placeholder = "Username", autocomplete = "current-username" })
                                @*<i class="fa fa-exclamation-circle position-absolute" style="right:7px; top:7px; color:red"></i>*@
                            </div>
                            <div class="form-group position-relative">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control position-relative", @placeholder = "Password", @autocomplete = "current-password" })
                              @*  <i class="fa fa-exclamation-circle position-absolute" style="right:7px; top:7px; color:red"></i>*@
                            </div>
                            <div class="form-group">
                                <small>
                                    <ul class="text-danger p-0 m-0" style="list-style: none;">
                                        <li>
                                            @Html.ValidationMessageFor(model => model.Username)
                                        </li>
                                        <li>
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </li>
                                    </ul>
                                </small>
                            </div>
                            <div class="form-group">
                                <small class="text-danger">
                                    @if (ViewBag.Error != null)
                                    {
                                        <span>@ViewBag.Error</span>
                                    }
                                </small>
                            </div>
                            <div class="from-group">
                                <input type="submit" value="Login" class="btn btn-block text-white">
                            </div>
                            <div class="form-group mt-1">
                                <a href="/Auth/Forgotpassword">Forgot your password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
