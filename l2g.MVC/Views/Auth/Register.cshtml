@using l2g.Entities.BusinessEntities
@model l2g.Entities.BusinessEntities.UserVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.css" rel="stylesheet" />
    <link href="~/Content/Custom CSS/register.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <div class="container-fluid animated fadeIn">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4 d-flex flex-column justify-content-center leftside" id="leftside">
                <nav class="navbar navbar-expand justify-content-start fixed-top">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home">
                                <i class="fa fa-times"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link login" href="/Auth/Login">Login</a>
                        </li>
                    </ul>
                </nav>
                <div class="row mx-2">
                    <div class="col-12">
                        <h2><strong>Register</strong></h2>
                        <p></p>
                    </div>
                    <div class="col-12">
                        <form method="post">
                            <div class="form-group position-relative">
                                @Html.TextBoxFor(model => model.Username, null, new { @class = "form-control", @placeholder = "Username", autocomplete = "current-username" })
                            </div>
                            <div class="form-group position-relative">
                                @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control", @placeholder = "Email", autocomplete = "current-email" })
                            </div>
                            <div class="form-group position-relative">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control position-relative", @placeholder = "Password", @autocomplete = "current-password" })
                            </div>
                            <div class="form-group position-relative">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control position-relative", @placeholder = "Confirm Password", @autocomplete = "current-confirmPassword" })
                           </div>
                            <div class="form-group">
                                <ul class="text-danger p-0 m-0" style="list-style: none;">
                                        <li>
                                            <small>@Html.ValidationMessageFor(model => model.Username)</small>  
                                        </li>
                                        <li>
                                            <small>@Html.ValidationMessageFor(model => model.Email)</small> 
                                        </li>
                                        <li>
                                            <small>@Html.ValidationMessageFor(model => model.Password)</small> 
                                        </li>
                                        <li>
                                            <small>@Html.ValidationMessageFor(model => model.ConfirmPassword)</small> 
                                        </li>
                               </ul>
                            </div>
                            <div class="form-group">
                                <ul class="text-danger p-0 m-0" style="list-style: none;">
                                    @foreach (var error in (Error[])ViewData["Errors"])
                                    {
                                        <li><small>@error.ErrorMessage</small></li>
                                    }
                                </ul>
                            </div>
                            <div class="from-group">
                                <input type="submit" value="Submit" class="btn btn-block text-white">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-8 rightside">
                <video autoplay loop muted preload="metadata" onplay="videoPlayer()" style="height: 100vh">
                    <source src="~/Content/Videos/Video1.webm" type="video/webm" />
                </video>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function videoPlayer() {
            this.playVideo = document.querySelector('video');
            if (this.playVideo.pause) {
                this.playVideo.muted = true; // important
                this.playVideo.play();
            }
        }
    </script>
</body>
</html>
